{
    "name": "dropfee-script",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npx tsc",
        "start": "npx ts-node src/index.ts",
        "clean": "rimraf dist",
        "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.test.ts' --exec 'ts-node --files -H -T src/index.ts'",
        "format:write": "prettier --write \"**/*.ts\" --cache",
        "format:check": "prettier --check \"**/*.ts\" --cache",
        "format-all": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "lint": "eslint \"**/*.ts\" --fix",
        "test": "concurrently \"yarn run format-all\" \"jest\" ",
        "test:watch": "jest --watchAll --no-cache  --detectOpenHandles",
        "test:e2e": "jest --config ./tests/jest-e2e.config.ts",
        "test:cov": "jest --coverage",
        "pm2:start": "pm2 start ecosystem.config.js",
        "setup": "node src/scripts/setup.js",
        "test-jkl": "npx ts-node src/scripts/test-drop-jkl.ts",
        "danger:ci": "danger ci",
        "danger:pr": "danger pr"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "4.14.0",
        "@project-serum/anchor": "^0.26.0",
        "@solana/web3.js": "^1.76.0",
        "@types/md5": "^2.3.2",
        "axios": "^1.4.0",
        "bs58": "^5.0.0",
        "dotenv": "^16.0.3",
        "fs": "^0.0.1-security",
        "https": "^1.0.0",
        "md5": "^2.3.0",
        "prompt-sync": "^4.2.0",
        "secretjs": "^1.9.0",
        "tweetnacl": "^1.0.3",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/node": "^20.1.7",
        "concurrently": "^8.0.1",
        "danger": "^11.2.8",
        "rimraf": "^5.0.1",
        "nodemon": "^2.0.22",
        "typescript": "^5.0.4",
        "@types/jest": "^29.5.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^5.1.2",
